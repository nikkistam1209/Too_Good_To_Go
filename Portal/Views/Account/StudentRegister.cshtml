@using Core.Domain;
@using Core.Domain.Enumerations;
@model StudentRegisterModel

@{
    ViewData["Title"] = "Student Registration";
}

<div class="container p-3 mb-3">

    <h3 class="dgreen-bg-color text-white text-center p-2">@ViewData["Title"]</h3>

    <form asp-action="StudentRegister" asp-controller="Account" method="post" >
        <div class="form-group">
            @if (ViewData.ModelState.TryGetValue("FirstName", out var idEntry) && idEntry.Errors.Count > 0)
            {
                <div class="alert alert-danger mb-1 mt-2">
                    @idEntry.Errors[0].ErrorMessage
                </div>
            }
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="LastName"></label>
            <div><span asp-validation-for="LastName" class="text-danger"></span></div>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="StudentID"></label>
            <div><span asp-validation-for="StudentID" class="text-danger"></span></div>
            <input asp-for="StudentID" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="DOB"></label>
            <div><span asp-validation-for="DOB" class="text-danger"></span></div>
            <input type="date" asp-for="DOB" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="Email"></label>
            <div><span asp-validation-for="Email" class="text-danger"></span></div>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="Phone"></label>
            <div><span asp-validation-for="Phone" class="text-danger"></span></div>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="City"></label>
            <div><span asp-validation-for="City" class="text-danger"></span></div>
            <select asp-for="City" class="form-control" asp-items="Html.GetEnumSelectList<CityEnum>()">
                <option>Selecteer</option>
            </select>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Password"></label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-green-color px-4 me-sm-3 text-white">Register</button>
    </form>

    <p>Already have an account? Click <a class="link" asp-action="Login" asp-controller="Account">here</a> to login</p>


</div>